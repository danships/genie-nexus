{
  "name": "genie-nexus",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "BSL-1.1",
  "packageManager": "pnpm@10.17.0",
  "type": "module",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true"
    ]
  },
  "scripts": {
    "lint:biome": "pnpm -r lint:biome",
    "lint:management": "pnpm --filter @genie-nexus/management lint",
    "lint": "concurrently --kill-others-on-fail \"pnpm:lint:*\"",
    "format": "concurrently \"pnpm:format:*\"",
    "format:biome": "pnpm -r format:biome",
    "test": "pnpm -r test",
    "test:ui:ci": "playwright test && vitest run",
    "test:ui": "./tests/run-local.sh",
    "test:ui:auth-none:pui": "AUTH_METHOD=none PUI=1 ./tests/run-local.sh",
    "test:ui:auth-none": "AUTH_METHOD=none ./tests/run-local.sh",
    "build": "pnpm -r --workspace-concurrency=1 build",
    "prepare": "husky",
    "pre-push": "concurrently \"pnpm lint\" \"pnpm test\"",
    "lint-staged": "lint-staged",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.55.1",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.18.3",
    "concurrently": "^9.2.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "rimraf": "^6.0.1",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "tar-fs": ">=2.1.4",
      "node-forge": ">=1.3.2",
      "qs": ">=6.14.1",
      "body-parser": ">=2.2.1",
      "js-yaml": ">=4.1.1",
      "gray-matter>js-yaml": "^3.14.1",
      "mdast-util-to-hast": ">=13.2.1",
      "playwright": ">=1.55.1",
      "webpack-dev-server": ">=5.2.1"
    }
  }
}
