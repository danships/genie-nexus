{
  "name": "genie-nexus-router",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc-watch --onSuccess \"node --enable-source-maps dist/server.js --config config.example.json\"",
    "test": "vitest",
    "clean": "rimraf dist"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings 0 --no-ignore",
      "prettier --check --loglevel=warn",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "!(*.config)*.(js|cjs|mjs)": [
      "eslint --max-warnings 0 --no-ignore",
      "prettier --check --loglevel=warn"
    ],
    "*.(json|md)": [
      "prettier --check --loglevel=warn"
    ]
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.18",
    "@ai-sdk/openai-compatible": "^0.2.12",
    "@auth/express": "^0.10.0",
    "@genie-nexus/auth": "workspace:*",
    "@genie-nexus/database": "workspace:*",
    "@genie-nexus/management": "workspace:*",
    "@genie-nexus/types": "workspace:*",
    "ai": "^4.3.9",
    "argon2": "^0.41.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "next": "15.3.1",
    "winston": "^3.17.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "openai": "^4.96.0",
    "rimraf": "^6.0.1",
    "supersave": "^0.16.0",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
